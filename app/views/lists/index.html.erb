<div
  class="bg-image p-5 text-center shadow-1-strong rounded mb-5 text-white"
  style="background-image: url('https://images.unsplash.com/photo-1655579934784-d988195a1319?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1175&q=80'); height: 300px"
> <div class="align-middle">
    <h1 class="mb-3 h2">Add any kind of movies</h1>
  </div>

</div>

<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="bg-white rounded p-3 shadow">
        <h1>These are the lists</h1>
        <ul>
          <% @lists.each do |list| %>
            <%= link_to list_path(list) do %>
              <li><%= list.name %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
       <button type="button" class="btn btn-outline-dark" role="button"><%= link_to 'New List', new_list_path%></button>
    </div>
  </div>
</div>


